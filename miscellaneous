## firewalld START
# Change SSH port
vim /etc/ssh/sshd_config
# Start
Port $port
# End

# Notify SELinux
yum -y install policycoreutils-python
semanage port -a -t ssh_port_t -p tcp $port
# Check the status
semanage port -l | grep ssh

yum -y update
yum -y install epel-release

yum -y install firewalld
systemctl start firewalld
systemctl enable firewalld

vim /usr/lib/firewalld/services/myssh.xml
# Start
<?xml version="1.0" encoding="utf-8"?>
<service>
  <short>ssh</short>
  <description>MySSH</description>
  <port protocol="tcp" port="$port"/>
</service>
# End

vim /usr/lib/firewalld/services/shadowsocks.xml
# Start
<?xml version="1.0" encoding="utf-8"?>
<service>
  <short>ss</short>
  <description>Shadowsocks</description>
  <port protocol="tcp" port="$port"/>
  <port protocol="udp" port="$port"/>
</service>
# End

firewall-cmd --zone=public --list-all
firewall-cmd --permanent --add-service=myssh
firewall-cmd --permanent --add-service=shadowsocks
firewall-cmd --permanent --remove-service=ssh
firewall-cmd --permanent --remove-service=dhcpv6-client
firewall-cmd --permanent --add-masquerade
## firewalld END

## BBR START
rpm --import https://www.elrepo.org/RPM-GPG-KEY-elrepo.org
rpm -Uvh http://www.elrepo.org/elrepo-release-7.0-3.el7.elrepo.noarch.rpm
yum -y --enablerepo=elrepo-kernel install kernel-ml
grub2-set-default 0

reboot

yum -y remove kernel kernel-tools kernel-tools-libs kernel-devel kernel-headers
yum --enablerepo=elrepo-kernel -y install kernel-ml-tools kernel-ml-tools-libs kernel-ml-devel kernel-ml-headers

vim /etc/sysctl.conf
# Start
# max open files
fs.file-max = 1024000
# max read buffer
net.core.rmem_max = 67108864
# max write buffer
net.core.wmem_max = 67108864
# default read buffer
net.core.rmem_default = 65536
# default write buffer
net.core.wmem_default = 65536
# max processor input queue
net.core.netdev_max_backlog = 4096
# max backlog
net.core.somaxconn = 4096

# resist SYN flood attacks
net.ipv4.tcp_syncookies = 1
# reuse timewait sockets when safe
net.ipv4.tcp_tw_reuse = 1
# turn off fast timewait sockets recycling
net.ipv4.tcp_tw_recycle = 0
# short FIN timeout
net.ipv4.tcp_fin_timeout = 30
# short keepalive time
net.ipv4.tcp_keepalive_time = 1200
# outbound port range
net.ipv4.ip_local_port_range = 10000 65000
# max SYN backlog
net.ipv4.tcp_max_syn_backlog = 4096
# max timewait sockets held by system simultaneously
net.ipv4.tcp_max_tw_buckets = 5000
# TCP receive buffer
net.ipv4.tcp_rmem = 4096 87380 67108864
# TCP write buffer
net.ipv4.tcp_wmem = 4096 65536 67108864
# turn on path MTU discovery
net.ipv4.tcp_mtu_probing = 1

net.ipv4.ip_forward = 1
net.core.default_qdisc = fq
net.ipv4.tcp_congestion_control = bbr
# End

sysctl -p

# Check the status
sysctl net.ipv4.tcp_available_congestion_control
sysctl net.ipv4.tcp_congestion_control
## BBR END

## supervisord START
yum -y install openssl-devel gcc swig python-devel autoconf libtool libevent python-setuptools python-pip
yum -y groupinstall "Development Tools"
pip install --upgrade pip
pip install supervisor M2Crypto greenlet gevent
echo_supervisord_conf > /etc/supervisord.conf
mkdir /var/log/supervisor/

vim /etc/rc.local
# Start
supervisord -c /etc/supervisord.conf
# End

chmod +x /etc/rc.local

vim /etc/security/limits.conf
# Start
*               soft    nofile           512000
*               hard    nofile           1024000
# End

vim /etc/pam.d/common-session
# Start
session required pam_limits.so
# End

vim /etc/profile
# Start
ulimit -SHn 1024000
# End

restorecon -v /etc/resolv.conf
restorecon -v /etc/hosts
restorecon -v /etc/hostname
timedatectl set-timezone Asia/Shanghai
timedatectl set-ntp yes
## supervisord END
